<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4sp">

    <android.support.v7.widget.CardView
        android:id="@+id/rowCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darker_still">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FF444444">

            <TextView
                android:id="@+id/rankTV"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.11"
                android:contentDescription="Rank of this boss."
                android:gravity="center"
                android:paddingStart="4sp"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.95"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/gameIV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.11"
                    android:adjustViewBounds="true"
                    android:contentDescription="The game this boss belongs to."
                    android:cropToPadding="true"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/nameTV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8sp"
                    android:layout_marginEnd="2sp"
                    android:layout_weight="0.80"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:textAppearance="@font/palanquin_dark_semibold"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/eloTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.15"
                    android:contentDescription="The number of points this boss has."
                    android:paddingEnd="4sp"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>